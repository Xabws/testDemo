<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/main_toolbar"/>
        <!--主页界面-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.a1234.animdemo.customview.AnimView
                    android:id="@+id/animview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true" />

                <com.example.a1234.animdemo.customview.AnimInterpolationView
                    android:id="@+id/animinter"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_alignParentBottom="true"
                    android:background="#0f0" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- drawerlayout中的子布局分为content、left、right三部分，其中left和right的布局需要在layout中声明android:layout_gravity-->

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        app:menu="@menu/main_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>